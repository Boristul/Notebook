<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/notes">

    <fragment
        android:id="@+id/notes"
        android:name="com.boristul.notebook.ui.notes.NotesFragment"
        android:label="@string/nf_label"
        tools:layout="@layout/fragment_notes">
        <action
            android:id="@+id/action_notes_fragment_to_noteEditorFragment"
            app:destination="@id/note_editor" />
    </fragment>

    <fragment
        android:id="@+id/note_editor"
        android:name="com.boristul.notebook.ui.noteeditor.NoteEditorFragment"
        android:label="@string/nef_edit_label"
        tools:layout="@layout/fragment_note_editor">

        <argument
            android:name="note"
            android:defaultValue="@null"
            app:argType="com.boristul.entity.Note"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/settings"
        android:name="com.boristul.notebook.ui.settings.SettingsFragment"
        android:label="@string/sf_label">
        <action
            android:id="@+id/action_settings_fragment_to_aboutFragment"
            app:destination="@id/about" />
    </fragment>

    <fragment
        android:id="@+id/about"
        android:name="com.boristul.notebook.ui.about.AboutFragment"
        android:label="@string/af_label"
        tools:layout="@layout/fragment_about" />

</navigation>
