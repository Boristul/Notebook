<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/notes_fragment">

    <!-- region global actions -->

    <action
        android:id="@+id/nav_action_notes"
        app:destination="@id/notes_fragment"
        app:popUpTo="@id/main" />

    <action
        android:id="@+id/nav_action_settings"
        app:destination="@id/settings_fragment"
        app:popUpTo="@id/main" />

    <!-- endregion -->

    <fragment
        android:id="@+id/notes_fragment"
        android:name="com.boristul.notebook.ui.notes.NotesFragment"
        android:label="@string/nf_label"
        tools:layout="@layout/fragment_notes">
        <action
            android:id="@+id/action_notes_fragment_to_noteEditorFragment"
            app:destination="@id/note_editor_fragment" />
    </fragment>

    <fragment
        android:id="@+id/note_editor_fragment"
        android:name="com.boristul.notebook.ui.noteeditor.NoteEditorFragment"
        android:label="@string/nef_edit_label"
        tools:layout="@layout/fragment_note_editor">

        <argument
            android:name="note"
            android:defaultValue="@null"
            app:argType="com.boristul.entity.Note"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.boristul.notebook.ui.settings.SettingsFragment"
        android:label="@string/sf_label">
        <action
            android:id="@+id/action_settings_fragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.boristul.notebook.ui.about.AboutFragment"
        android:label="@string/af_label"
        tools:layout="@layout/fragment_about" />

</navigation>
